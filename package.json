{
  "name": "ai-qa-engineer",
  "version": "1.0.0",
  "description": "Automated, human-like testing for your Pull Requests using Claude Code + Playwright MCP",
  "type": "module",
  "main": "scripts/index.js",
  "keywords": [
    "qa",
    "testing",
    "playwright",
    "claude",
    "ai",
    "automation",
    "github-actions"
  ],
  "author": "Tyler James Bridges",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tyler-james-bridges/ai-qa-engineer"
  },
  "bugs": {
    "url": "https://github.com/tyler-james-bridges/ai-qa-engineer/issues"
  },
  "homepage": "https://github.com/tyler-james-bridges/ai-qa-engineer",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "lint": "eslint scripts/ .github/workflows/",
    "lint:fix": "eslint scripts/ .github/workflows/ --fix",
    "test": "node --test scripts/**/*.test.js",
    "test:watch": "node --test --watch scripts/**/*.test.js",
    "install:browsers": "playwright install chromium",
    "visual:compare": "node scripts/visual-regression.cjs compare",
    "visual:update-baseline": "node scripts/visual-regression.cjs update-baseline"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^2.0.76",
    "pixelmatch": "^7.1.0",
    "playwright": "^1.48.0",
    "pngjs": "^7.0.0"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5"
  }
}
